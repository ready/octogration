{
  "rules": {
    "subject-max-length": [
      1,
      "always",
      100
    ],
    "subject-empty": [
      2,
      "never"
    ],
    "subject-exclamation-mark": [
      2,
      "never"
    ],
    "subject-full-stop": [
      2,
      "never",
      "."
    ],
    "subject-case": [
      2,
      "never",
      [
        "sentence-case",
        "start-case",
        "pascal-case",
        "upper-case"
      ]
    ],
    "type-case": [
      2,
      "always",
      "lower-case"
    ],
    "type-empty": [
      2,
      "never"
    ],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refact",
        "revert",
        "style",
        "test",
        "typo"
      ]
    ]
  }
}